<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Метка сценария: [%X{scenario}] -->
    <property name="PATTERN" value="%d{HH:mm:ss.SSS} %-5level [%X{scenario}] %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>${PATTERN}</pattern></encoder>
    </appender>

    <!-- Хотим видеть SQL, но без шума биндингов -->
    <logger name="org.hibernate.SQL" level="INFO"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
